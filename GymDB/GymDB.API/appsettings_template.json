{
  "ConnectionStrings": {
    "PostgresConnection": "Server=<server>;Database=<db_name>;Port=<port>;User Id=<user_id>;Password=<password>;"
  },
  "AzureSettings": {
    "StorageAccount": "<azure storage account>",
    "AccessKey": "<azure storage account access key>",
    "ImageContainer": "<azure container>",
    "AcceptedFileMimeType": "<file mime types separated by ;>",
    "MaxFileSize": 0
  },
  "JwtSettings": {
    "Issuer": "<issuer>",
    "Audience": "<audience>",
    "ServerSecretKey": "<jwt secret key>",
    "AccessTokenLifetime": "00:00:00",
    "RefreshTokenLifetime": "00:00:00"
  },
  "DbSeed": {
    "RoleColors": {
      "SuperAdmin": "<hex color code>",
      "Admin": "<hex color code>",
      "Normie": "<hex color code>"
    },
    "RootAdmin": {
      "Username": "<root username>",
      "Email": "<root email>",
      "Password": "<root password>"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
  